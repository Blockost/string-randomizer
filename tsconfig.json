{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
